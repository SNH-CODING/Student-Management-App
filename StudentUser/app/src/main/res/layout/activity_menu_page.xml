<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_screen"
    tools:context=".menu_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="50dp">

        <Space
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <Button
            android:id="@+id/info_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Information"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:onClick="activity_info_page"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/mark_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Marks Details"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:onClick="activity_mark_page"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/about_app_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="About the App"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:onClick="activity_app_page"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <!--<Button
            android:id="@+id/logout_activity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:textColor="#ffffff"
            android:textSize="18sp" />-->

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>